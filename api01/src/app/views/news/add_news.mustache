<!DOCTYPE html>
<html lang="en">

<head>
  {{> partials/head/meta_scripts}}
</head>

<body>
  <div class="container">
    <h1>Adicionar not√≠cia</h1>
   
    {{> partials/alert_error }}
   
    <form action="/news/save" method="post">
      <div class="mb-3">
        <label for="Titulo" class="form-label">Titulo</label>
        <input type="text" class="form-control" id="title" name="title" value="{{news.title}}"
          placeholder="Title da noticia">
      </div>
      <div class="mb-3">
        <label for="Resumo" class="form-label">Resumo</label>
        <input type="text" class="form-control" id="summary" name="summary" value="{{news.summary}}"
          placeholder="Resumo da noticia">
      </div>
      <div class="mb-3">
        <label for="Autor" class="form-label">Autor</label>
        <input type="text" class="form-control" id="author" name="author" value="{{news.author}}"
          placeholder="Autor da noticia">
      </div>
      <div class="mb-3">
        <label for="Data" class="form-label">Data do ocorrido</label>
        <input type="date" class="form-control" id="news_date" name="news_date" value="{{news.news_date}}"
          placeholder="Data da noticia">
      </div>

      <textarea class="form-control" id="news" name="news" rows="5" cols="30">{{{news.news}}}</textarea>

      <input type="submit" class="btn btn-primary" value="Enviar">

    </form>

  </div>

</body>

</html>